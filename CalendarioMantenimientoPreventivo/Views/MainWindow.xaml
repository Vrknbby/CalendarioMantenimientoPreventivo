<Window x:Class="CalendarioMantenimientoPreventivo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calendario de Mantenimiento Preventivo" 
        Height="750" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- Estilo base para tarjetas de mes -->
        <Style x:Key="MonthCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.06" 
                                    BlurRadius="8" 
                                    ShadowDepth="2"
                                    Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" 
                                            Opacity="0.12" 
                                            BlurRadius="12" 
                                            ShadowDepth="3"
                                            Direction="270"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para tarjetas con mantenimiento programado -->
        <Style x:Key="MonthCardWithMaintenanceStyle" 
               TargetType="Border" 
               BasedOn="{StaticResource MonthCardStyle}">
            <Setter Property="Background" Value="#F5F8FA"/>
            <Setter Property="BorderBrush" Value="#607D8B"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <!-- Estilo para nombre del mes -->
        <Style x:Key="MonthTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Estilo para texto informativo -->
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#95A5A6"/>
        </Style>

        <!-- Estilo para texto de mantenimientos -->
        <Style x:Key="MaintenanceTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#546E7A"/>
        </Style>

        <!-- Convertidor para determinar el estilo según si tiene mantenimientos -->
        <Style x:Key="DynamicMonthCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.06" 
                                    BlurRadius="8" 
                                    ShadowDepth="2"
                                    Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TieneMantenimientos}" Value="True">
                    <Setter Property="Background" Value="#F5F8FA"/>
                    <Setter Property="BorderBrush" Value="#607D8B"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" 
                                            Opacity="0.12" 
                                            BlurRadius="12" 
                                            ShadowDepth="3"
                                            Direction="270"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo dinámico para el texto de mantenimientos -->
        <Style x:Key="DynamicMaintenanceTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding TieneMantenimientos}" Value="False">
                    <Setter Property="Foreground" Value="#95A5A6"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding TieneMantenimientos}" Value="True">
                    <Setter Property="Foreground" Value="#546E7A"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header: Selector de año -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="24">
            <StackPanel>
                <TextBlock Text="Calendario Anual" 
                          FontSize="22" 
                          FontWeight="SemiBold" 
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,16"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Año:" 
                              FontSize="14" 
                              FontWeight="Medium" 
                              Foreground="#546E7A" 
                              VerticalAlignment="Center" 
                              Margin="0,0,12,0"/>

                    <Button x:Name="AnteriorAnio"
                           Content="◀" 
                           Width="36" 
                           Height="36" 
                           FontSize="12"
                           Background="White" 
                           Foreground="#546E7A"
                           BorderBrush="#D0D0D0" 
                           BorderThickness="1"
                           Cursor="Hand"
                           Margin="0,0,8,0"
                           Click="AnteriorAnio_Click"/>

                    <TextBox x:Name="AnioTextBox"
                            Text="{Binding AnioSeleccionado, UpdateSourceTrigger=PropertyChanged}" 
                            Width="90" 
                            Height="36" 
                            FontSize="16" 
                            FontWeight="Medium" 
                            TextAlignment="Center" 
                            VerticalContentAlignment="Center"
                            Foreground="#2C3E50"
                            BorderBrush="#D0D0D0"
                            BorderThickness="1"
                            Margin="0,0,8,0"
                            LostFocus="AnioTextBox_LostFocus"/>

                    <Button x:Name="SiguienteAnio"
                           Content="▶" 
                           Width="36" 
                           Height="36" 
                           FontSize="12"
                           Background="White" 
                           Foreground="#546E7A"
                           BorderBrush="#D0D0D0" 
                           BorderThickness="1"
                           Cursor="Hand"
                           Click="SiguienteAnio_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Área principal: Calendario con tarjetas de meses -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled"
                     Padding="16,24,16,24">
            <ItemsControl ItemsSource="{Binding Meses}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4" Rows="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource DynamicMonthCardStyle}"
                                MouseLeftButtonUp="Mes_Click">
                            <StackPanel>
                                <TextBlock Text="{Binding NombreMes}" 
                                          Style="{StaticResource MonthTextStyle}"/>
                                <TextBlock Text="{Binding TextoMantenimientos}" 
                                          Style="{StaticResource DynamicMaintenanceTextStyle}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer: Botón de gestión -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="24">
            <Button x:Name="AbrirLocalesWindow" Content="Gestionar Locales y Mantenimientos" 
                   Height="44" 
                   MinWidth="280"
                   FontSize="14" 
                   FontWeight="Medium" 
                   Background="#546E7A" 
                   Foreground="White" 
                   BorderBrush="#455A64" 
                   BorderThickness="1"
                   Cursor="Hand"
                   HorizontalAlignment="Center"
                   Padding="24,0" 
                   Click="AbrirLocalesWindow_Click_1">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           BorderBrush="{TemplateBinding BorderBrush}" 
                                           BorderThickness="{TemplateBinding BorderThickness}" 
                                           CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#607D8B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#455A64"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>

    </Grid>
</Window>