<Window x:Class="CalendarioMantenimientoPreventivo.Views.LocalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Local" 
        Height="320" 
        Width="497"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#FAFAFA"
        Icon="/Resources/app-icon.ico">

    <Window.Resources>
        <!-- Estilo para etiquetas -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Estilo para el TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para botón Guardar -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4"
                               Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botón Cancelar -->
        <Style x:Key="CancelarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4"
                               Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <StackPanel>
                <TextBlock x:Name="TituloTextBlock"
                          Text="Agregar Local" 
                          FontSize="20" 
                          FontWeight="SemiBold" 
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido -->
        <Border Grid.Row="1" 
                Padding="30,24">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Nombre del Local" 
                          Style="{StaticResource LabelStyle}"/>

                <TextBox x:Name="NombreLocalTextBox" 
                        Style="{StaticResource InputTextBoxStyle}"
                        Text=""
                        TabIndex="0"/>

                <TextBlock Text="Ingrese un nombre descriptivo para identificar el local" 
                          FontSize="11" 
                          Foreground="#95A5A6"
                          FontStyle="Italic"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Footer con botones -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="30,16">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">

                <Button x:Name="GuardarButton"
                       Content="Guardar"
                       IsDefault="True"
                       Style="{StaticResource GuardarButtonStyle}" Click="GuardarButton_Click"/>

                <Button x:Name="CancelarButton"
                       Content="Cancelar"
                       IsCancel="True"
                       Style="{StaticResource CancelarButtonStyle}" Click="CancelarButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>