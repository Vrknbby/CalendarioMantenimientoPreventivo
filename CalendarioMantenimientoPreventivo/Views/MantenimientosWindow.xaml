<Window x:Class="CalendarioMantenimientoPreventivo.Views.MantenimientosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestión de Mantenimientos" 
        Height="700" 
        Width="850"
        MinHeight="650"
        MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <!-- Estilo para campos de texto -->
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Estilo para botones de acción -->
        <Style x:Key="GuardarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4"
                               Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3339ff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4"
                               Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#607D8B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#455A64"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EliminarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="4"
                               Padding="20,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EF5350"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CerrarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4"
                               Padding="16,0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para items de la lista -->
        <Style x:Key="MantenimientoItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#F5F8FA"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FAFBFC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con nombre del Local -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                Padding="24">
            <StackPanel>
                <TextBlock Text="Mantenimientos del Local" 
                          FontSize="22" 
                          FontWeight="SemiBold" 
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                <TextBlock x:Name="NombreLocalTextBlock" 
                          Text="Local Centro Comercial" 
                          FontSize="16" 
                          FontWeight="Medium"
                          Foreground="#546E7A"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Lista de mantenimientos existentes -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.06" 
                                    BlurRadius="8" 
                                    ShadowDepth="2"
                                    Direction="270"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Título de la lista -->
                    <Border Grid.Row="0" 
                            Background="#F8F9FA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1"
                            Padding="16,12">
                        <TextBlock Text="Mantenimientos Registrados" 
                                  FontSize="15" 
                                  FontWeight="SemiBold" 
                                  Foreground="#2C3E50"/>
                    </Border>

                    <!-- Lista -->
                    <ListBox Grid.Row="1" 
                            x:Name="MantenimientosListBox"
                            BorderThickness="0"
                            Background="White"
                            ItemContainerStyle="{StaticResource MantenimientoItemStyle}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Nombre}" 
                                                  FontSize="14" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#2C3E50"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding Descripcion}" 
                                                  FontSize="12" 
                                                  Foreground="#95A5A6"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                               Orientation="Horizontal" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,16,0">
                                        <TextBlock Text="📅 " 
                                                  FontSize="12"
                                                  Margin="0,0,4,0"/>
                                        <TextBlock FontSize="12" 
                                                  Foreground="#546E7A">
                                            <Run Text="{Binding Mes}"/>
                                            <Run Text="/"/>
                                            <Run Text="{Binding Año}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                              VerticalAlignment="Center"
                                              FontSize="13" 
                                              FontWeight="SemiBold"
                                              Foreground="#4CAF50">
                                        <Run Text="$"/>
                                        <Run Text="{Binding Costo}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                        <!-- Datos de ejemplo -->
                        <ListBoxItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Revisión eléctrica general" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="Inspección de tableros, cableado y tomas eléctricas" 
                                              FontSize="12" 
                                              Foreground="#95A5A6"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                           Orientation="Horizontal" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                    <TextBlock Text="📅 " 
                                              FontSize="12"
                                              Margin="0,0,4,0"/>
                                    <TextBlock Text="Febrero/2025" 
                                              FontSize="12" 
                                              Foreground="#546E7A"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                          Text="$ 1,200.00" 
                                          VerticalAlignment="Center"
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#4CAF50"/>
                            </Grid>
                        </ListBoxItem>

                        <ListBoxItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Mantenimiento de aire acondicionado" 
                                              FontSize="14" 
                                              FontWeight="SemiBold"
                                              Foreground="#2C3E50"
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="Limpieza de filtros y revisión de gas refrigerante" 
                                              FontSize="12" 
                                              Foreground="#95A5A6"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" 
                                           Orientation="Horizontal" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0">
                                    <TextBlock Text="📅 " 
                                              FontSize="12"
                                              Margin="0,0,4,0"/>
                                    <TextBlock Text="Abril/2025" 
                                              FontSize="12" 
                                              Foreground="#546E7A"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                          Text="$ 850.00" 
                                          VerticalAlignment="Center"
                                          FontSize="13" 
                                          FontWeight="SemiBold"
                                          Foreground="#4CAF50"/>
                            </Grid>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Formulario de agregar/editar mantenimiento -->
            <Border Grid.Row="1" 
                    Background="White" 
                    BorderBrush="#D0D0D0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                    Opacity="0.06" 
                                    BlurRadius="8" 
                                    ShadowDepth="2"
                                    Direction="270"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Datos del Mantenimiento" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#2C3E50"
                              Margin="0,0,0,16"/>

                    <!-- Grid de campos -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Nombre -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Nombre del Mantenimiento" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="NombreTextBox" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    Text=""/>
                        </StackPanel>

                        <!-- Costo -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="Costo Referencial ($)" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="CostoTextBox" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    Text=""/>
                        </StackPanel>

                        <!-- Descripción -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                            <TextBlock Text="Descripción" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="DescripcionTextBox" 
                                    Height="60"
                                    FontSize="13"
                                    Padding="10,8"
                                    BorderBrush="#D0D0D0"
                                    BorderThickness="1"
                                    Background="White"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Mes -->
                        <StackPanel Grid.Row="4" Grid.Column="0">
                            <TextBlock Text="Mes" Style="{StaticResource InputLabelStyle}"/>
                            <ComboBox x:Name="MesComboBox" 
                                     Style="{StaticResource InputComboBoxStyle}">
                                <ComboBoxItem Content="Enero"/>
                                <ComboBoxItem Content="Febrero"/>
                                <ComboBoxItem Content="Marzo"/>
                                <ComboBoxItem Content="Abril"/>
                                <ComboBoxItem Content="Mayo"/>
                                <ComboBoxItem Content="Junio"/>
                                <ComboBoxItem Content="Julio"/>
                                <ComboBoxItem Content="Agosto"/>
                                <ComboBoxItem Content="Septiembre"/>
                                <ComboBoxItem Content="Octubre"/>
                                <ComboBoxItem Content="Noviembre"/>
                                <ComboBoxItem Content="Diciembre"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Año -->
                        <StackPanel Grid.Row="4" Grid.Column="2">
                            <TextBlock Text="Año" Style="{StaticResource InputLabelStyle}"/>
                            <TextBox x:Name="AñoTextBox" 
                                    Style="{StaticResource InputTextBoxStyle}"
                                    Text="2025"/>
                        </StackPanel>
                    </Grid>

                    <!-- Botones de acción -->
                    <Border Height="1" 
                           Background="#E0E0E0" 
                           Margin="0,20,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                   Orientation="Horizontal">
                            <Button x:Name="GuardarButton"
                                   Content="💾 Guardar"
                                   Style="{StaticResource GuardarButtonStyle}"/>

                            <Button x:Name="EditarButton"
                                   Content="✏️ Editar"
                                   Style="{StaticResource EditarButtonStyle}"/>

                            <Button x:Name="EliminarButton"
                                   Content="🗑️ Eliminar"
                                   Style="{StaticResource EliminarButtonStyle}"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                               x:Name="CerrarButton"
                               Content="← Cerrar"
                               Style="{StaticResource CerrarButtonStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>